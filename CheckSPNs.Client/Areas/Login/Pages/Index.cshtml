@page
@model CheckSPNs.Client.Areas.Login.Pages.IndexModel
@{
    ViewData["Title"] = "Login";
    var check = @ViewData["Checked"];
}

<p class="login-box-msg">Sign in to start your session</p>
@if (check != null)
{
    <p class="text-danger">@check</p>
}
<form method="post">
    <div class="input-group mb-3">
        <input type="email" class="form-control" asp-for="loginModel.Email" placeholder="name@email.com"/>
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-envelope"></span>
            </div>
        </div>
    </div>
    <span asp-validation-for="loginModel.Email" class="text-danger"></span>
    <div class="input-group mb-3">
        <input type="password" class="form-control" asp-for="loginModel.Password" placeholder="Enter your password"/>
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-lock"></span>
            </div>
        </div>
    </div>
    <span asp-validation-for="loginModel.Password" class="text-danger"></span>
    <div class="row">
        @* <div class="col-8">
            <div class="icheck-primary">
                <input type="checkbox" id="remember">
                <label for="remember">
                    Remember Me
                </label>
            </div>
        </div> *@
        <!-- /.col -->
        <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
        </div>
        <!-- /.col -->
    </div>
</form>

