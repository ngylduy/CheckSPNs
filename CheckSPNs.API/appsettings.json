{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "server =(local); database = CheckSPNsDatabase;uid=sa;pwd=123;Trusted_Connection=True;Encrypt=False"
  },
  "MongoDatabaseOptions": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "CheckSPNsMongoDb"
  },
  "TokenBear": {
    "Issuer": "https://localhost:7021/",
    "Audience": "Owner",
    "SignatureKey": "6VAwkn4cGkAe2Wj50G8eUvAIDeTmIEln",
    "AccessTokenExpiredByMinutes": 180,
    "RefreshTokenExpiredByHours": 20
  },
  "DefaultUser": {
    "Username": "administrator",
    "Email": "admin@gmail.com",
    "Role": "Admin",
    "Password": "Admin@123"
  },
  "DefaultRole": [
    "Admin",
    "User"
  ],
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer", "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Error",
      "override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "Theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "shared": true
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "ConnectionString": "server =(local); database = CheckSPNsDatabase;uid=sa;pwd=123;Trusted_Connection=True;Encrypt=False",
          "TableName": "SystemLogs",
          "autoCreateSqlTable": true
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  }
  // End
}
